<Window x:Class="UniversityStudentsInfo.AcessWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UniversityStudentsInfo"
        mc:Ignorable="d"
        Title="AcessWindow" Height="200" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Label Content="Вы уверены?" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="24"/>
        <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Center">
            <Button x:Name="Yes" Content="Да" Click="Yes_Click" VerticalAlignment="Center" FontSize="20" Margin="0,0,50,0" Width="90"/>
            <Button x:Name="No" Content="Нет" Click="No_Click" VerticalAlignment="Center" FontSize="20" Margin="50,0,0,0" Width="90"/>
        </StackPanel>
    </Grid>
</Window>
